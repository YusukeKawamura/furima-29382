function destroyComment() {
  const html = document.getElementById("content-<%= @comment.id %>")
  html.remove()

  <% if @comments.ids.empty? %>
  const comment = document.getElementById('comments')
  const emptyContent =`
    <div class="empty-content-box" id="empty-content-box">
      <p class="empty-comment-content">まだコメントがありません</p>
    </div>`
  comment.insertAdjacentHTML('beforeend', emptyContent)
  <% end %>
}

setInterval(destroyComment, 1000)